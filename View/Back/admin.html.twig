{% extends "Template/baseBack.html.twig" %}

{% block title %}Administration
{% endblock %}
{% block metaName %}Administration
{% endblock %}
{% block metaContent %}Section Administration
{% endblock %}
{% block part %}Section Administration
{% endblock %}

{% block content %}
	<div class="bs-component">
		<div class="row">
			<a class="card col-12 col-lg-3 mx-4 border-primary mb-3" href="?action=newPost">
				<div class="card-header">
					NOUVEAU
				</div>
				<div class="card-body">
					<p class="card-text text-center">Vous voulez faire une nouvelle publication ?</p>
				</div>
			</a>
			<a class="card col-12 col-lg-3 mx-4 border-secondary mb-3" href="?action=editPostList">
				<div class="card-header">
					MODIFICATION
				</div>
				<div class="card-body">
					<p class="card-text text-center">Un post doit être modifié ?</p>
				</div>
			</a>
			<a class="card col-12 col-lg-3 mx-4 border-warning mb-3" href="?action=validComment">
				<div class="card-header">
					VALIDATION
				</div>
				<div class="card-body">
					<p class="card-text text-center">Retrouvez la liste des commentaires en attente de modération</p>
				</div>
			</a>
		</div>
	</div>
{% endblock %}
