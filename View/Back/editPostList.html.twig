{% extends "Template/baseBack.html.twig" %}

{% block title %}Modification Post (Liste)
{% endblock %}
{% block metaName %}AdminPosts
{% endblock %}
{% block metaContent %}Liste des posts
{% endblock %}
{% block part %}Liste des posts
{% endblock %}

{% block content %}
	<div class="bs-component">
		{% for post in listPosts %}
			<div class="card" style="width: 100%;">
				<div class="card-body">
					<h5 class="card-title">
                        {{ post.title }}
						{% if post.publish == 1 %}
							<span class="badge badge-info badge-pill">ON
							</span>
						{% else %}
							<span class="badge badge-warning badge-pill">
								OFF
							</span>
						{% endif %}
					</h5>
					<p class="card-text">
						{{ post.chapo }}
					</p>
					<p class="card-text">
						Derni√®re modification le {{ post.dateLast }}
					</p>
					<a href="?action=editPostDetail&postId={{ post.id }}" class="btn btn-primary">Modifier</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
